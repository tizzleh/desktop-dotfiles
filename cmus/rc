#set browser_dir=/mnt/sda1/Music

# Set the colorscheme.
#colorscheme green_mono

# Bind keys for volume control.
bind -f common + voldown 2%
bind -f common - volup 2%

# Set the output_plugin (you can use 'pulse', 'alsa', 'oss' or 'jack')
set output_plugin=pulse

# You can also set the equalizer if you wish.
# This is a flat EQ setting.
# Use `vol` for preamp, `1`-`10` for bands from 60Hz to 16kHz
# eqset -b -c -v [channel_id] vol 0
